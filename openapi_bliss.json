{
  "openapi": "3.1.0",
  "info": {
    "title": "Universal LLM Controller – BlissOS ADB API",
    "description": "Мінімальний OpenAPI-опис ендпоінтів BlissOS для Universal LLM Controller. Імпортуйте цей JSON в OpenWebUI (Tools → API Specifications), щоб LLM могла керувати BlissOS через adb.",
    "version": "2.1.0"
  },
  "servers": [
    {
      "url": "http://proxmox-controller:8000",
      "description": "Internal Docker network"
    },
    {
      "url": "http://localhost:8000",
      "description": "Local development"
    }
  ],
  "paths": {
    "/bliss/adb/devices": {
      "get": {
        "summary": "Bliss Adb Devices",
        "operationId": "bliss_adb_devices_bliss_adb_devices_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "Response Bliss Adb Devices Bliss Adb Devices Get",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/bliss/adb/connect": {
      "post": {
        "summary": "Bliss Adb Connect",
        "operationId": "bliss_adb_connect_bliss_adb_connect_post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlissADBConnectSpec"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "Response Bliss Adb Connect Bliss Adb Connect Post",
                  "additionalProperties": true
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/bliss/adb/disconnect": {
      "post": {
        "summary": "Bliss Adb Disconnect",
        "operationId": "bliss_adb_disconnect_bliss_adb_disconnect_post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlissADBDisconnectSpec"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "Response Bliss Adb Disconnect Bliss Adb Disconnect Post",
                  "additionalProperties": true
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/bliss/adb/shell": {
      "post": {
        "summary": "Bliss Adb Shell",
        "operationId": "bliss_adb_shell_bliss_adb_shell_post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlissADBShellSpec"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "Response Bliss Adb Shell Bliss Adb Shell Post",
                  "additionalProperties": true
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/bliss/adb/command": {
      "post": {
        "summary": "Bliss Adb Command",
        "operationId": "bliss_adb_command_bliss_adb_command_post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlissADBCommandSpec"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "Response Bliss Adb Command Bliss Adb Command Post",
                  "additionalProperties": true
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BlissADBCommandSpec": {
        "type": "object",
        "title": "BlissADBCommandSpec",
        "properties": {
          "serial": {
            "title": "Serial",
            "description": "ADB серійний номер або host:port. Якщо не задано, використовується BLISS_ADB_SERIAL чи BLISS_ADB_ADDRESS.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "host": {
            "title": "Host",
            "description": "IP/hostname BlissOS для TCP ADB. За замовчуванням BLISS_ADB_HOST. Якщо serial не містить ':', host і port утворять host:port.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "port": {
            "title": "Port",
            "description": "TCP-порт ADB (типово 5555 або BLISS_ADB_PORT).",
            "anyOf": [
              {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              {
                "type": "null"
              }
            ]
          },
          "command": {
            "title": "Command",
            "description": "Повна adb команда без 'adb' (наприклад, 'install /tmp/app.apk').",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "args": {
            "title": "Args",
            "description": "Список аргументів для adb (наприклад, ['install', '/tmp/app.apk']).",
            "anyOf": [
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "timeout": {
            "title": "Timeout",
            "description": "Таймаут виконання adb-команди у секундах.",
            "type": "integer",
            "minimum": 1,
            "maximum": 1800,
            "default": 60
          }
        }
      },
      "BlissADBConnectSpec": {
        "type": "object",
        "title": "BlissADBConnectSpec",
        "properties": {
          "serial": {
            "title": "Serial",
            "description": "ADB серійний номер або host:port. Якщо не задано, використовується BLISS_ADB_SERIAL чи BLISS_ADB_ADDRESS.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "host": {
            "title": "Host",
            "description": "IP/hostname BlissOS для TCP ADB. За замовчуванням BLISS_ADB_HOST. Якщо serial не містить ':', host і port утворять host:port.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "port": {
            "title": "Port",
            "description": "TCP-порт ADB (типово 5555 або BLISS_ADB_PORT).",
            "anyOf": [
              {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              {
                "type": "null"
              }
            ]
          },
          "force_disconnect": {
            "title": "Force Disconnect",
            "description": "Спочатку виконати adb disconnect target перед підключенням.",
            "type": "boolean",
            "default": false
          },
          "wait_for_device": {
            "title": "Wait For Device",
            "description": "Після успішного підключення чекати появи пристрою (adb wait-for-device).",
            "type": "boolean",
            "default": true
          },
          "timeout": {
            "title": "Timeout",
            "description": "Таймаут adb connect у секундах.",
            "type": "integer",
            "minimum": 1,
            "maximum": 600,
            "default": 20
          }
        }
      },
      "BlissADBDisconnectSpec": {
        "type": "object",
        "title": "BlissADBDisconnectSpec",
        "properties": {
          "serial": {
            "title": "Serial",
            "description": "ADB серійний номер або host:port. Якщо не задано, використовується BLISS_ADB_SERIAL чи BLISS_ADB_ADDRESS.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "host": {
            "title": "Host",
            "description": "IP/hostname BlissOS для TCP ADB. За замовчуванням BLISS_ADB_HOST. Якщо serial не містить ':', host і port утворять host:port.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "port": {
            "title": "Port",
            "description": "TCP-порт ADB (типово 5555 або BLISS_ADB_PORT).",
            "anyOf": [
              {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              {
                "type": "null"
              }
            ]
          },
          "all": {
            "title": "All",
            "description": "Якщо true — виконується adb disconnect --all. Інакше роз'єднання лише з target.",
            "type": "boolean",
            "default": false
          }
        }
      },
      "BlissADBShellSpec": {
        "type": "object",
        "title": "BlissADBShellSpec",
        "properties": {
          "serial": {
            "title": "Serial",
            "description": "ADB серійний номер або host:port. Якщо не задано, використовується BLISS_ADB_SERIAL чи BLISS_ADB_ADDRESS.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "host": {
            "title": "Host",
            "description": "IP/hostname BlissOS для TCP ADB. За замовчуванням BLISS_ADB_HOST. Якщо serial не містить ':', host і port утворять host:port.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "port": {
            "title": "Port",
            "description": "TCP-порт ADB (типово 5555 або BLISS_ADB_PORT).",
            "anyOf": [
              {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              {
                "type": "null"
              }
            ]
          },
          "cmd": {
            "title": "Cmd",
            "description": "Одна команда для adb shell. При наявності commands ігнорується.",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "commands": {
            "title": "Commands",
            "description": "Список послідовних команд для adb shell (виконуються окремо).",
            "anyOf": [
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "timeout": {
            "title": "Timeout",
            "description": "Максимальна тривалість кожної adb shell команди в секундах.",
            "type": "integer",
            "minimum": 1,
            "maximum": 1800,
            "default": 60
          },
          "use_su": {
            "title": "Use Su",
            "description": "Обгорнути команду в su -c '<cmd>' (якщо пристрій підтримує root).",
            "type": "boolean",
            "default": false
          }
        }
      },
      "HTTPValidationError": {
        "type": "object",
        "title": "HTTPValidationError",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "title": "ValidationError",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
